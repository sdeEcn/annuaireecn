{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}
{% block stylesheet %}
  <style type="text/css">
  body{
    margin:0;
    padding: 0;
    background: #273c75;
  }
  .search-box{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background: #7f8fa6;
    height: 40px;
    border-radius: 40px;
    padding: 10px;
  }
  .search-box:hover>.search-text{
    width: 240px;
    padding: 0 6px;
  }
  .search-box:hover>.search-btn{
    background: white;
  }
  .search-btn{
    color : #fbc531;
    float :right;
    width: 40px;
    height: 40px;
    border-radius: 60%;
    background: #7f8fa6;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .search-text{
    border:none;
    background: none;
    outline:none;
    float:left;
    padding:0;
    color:white;
    font-size: 16px;
    transition: 0.4s;
    line-height: 40px;
    width: 0px;

  }
  {{ parent() }}
</style>
{% endblock %}
{% block pageHeader %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<form method="post" action="/recherche" id="envoi">
  <div class ="search-box">

  	<input class="search-text" type="text" name="requete" placeholder="Un-e Nantralien-ne, une asso...">
  	<a class="search-btn" href="javascript:{}" onclick='document.getElementById("envoi").submit()'>
      <i class="fas fa-search"></i>
    </a>
  </div>
</form>

<!--Affichage des résultats-->
<!--{% if resultats is defined %}-->
<div class="affichageRecherche">
<div>
  <p>Vous recherchez : {{ requete }}</p>
</div>
{%if resultats is empty  %}
  <p> Aucun résultat</p>
{% endif %}
  <table>
  {% for personne in resultats %}
  <tr>
    {%for infos in personne %}
    <td>
      <p><!--Eleve_nom--></p>
      <p><!-- Eleve_prenom>--></p>
      <p><!-- Eleve_promo--></p>
    </td></br>
    {% endfor %}

  </tr>
  {% endfor %}
  </table>
</div>
{% endif %}
{% endblock %}
